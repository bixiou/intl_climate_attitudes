#include s2color

* background color
color 			background		white

* graph size
graphsize 		y 				5
graphsize 		x 				8

* legend options
linestyle  		legend			none

* order of colors
color 			p1			   	"41 182 164"
color 			p2			    "250 165 35"
color 			p3				"0 58 79"
color 			p4				"127 72 146"
color 			p5				"164 206 78"
